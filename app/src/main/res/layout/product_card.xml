<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="5dp"
    android:background="#FFFFFF"
    app:circularflow_defaultRadius="10dp"
    app:circularflow_radiusInDP="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:background="#703131"
        android:elevation="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="20dp"
        app:contentPaddingBottom="5dp"
        app:contentPaddingLeft="4dp"
        app:contentPaddingRight="4dp"
        app:contentPaddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/productImageonCard"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/mobile" />

            <TextView
                android:id="@+id/productPriceonCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="3"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="â‚¹ 9999/-"
                android:textColor="#D51515"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productDetailonCard"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="clip_vertical|center_horizontal"
                android:paddingBottom="2dp"
                android:text="iPhone 15 (64 GB)  6GB RAM, GOLD"
                android:textColor="#101010"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>